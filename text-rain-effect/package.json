{
  "name": "text-rain-effect",
  "version": "1.0.0",
  "description": "文字雨特效视频生成器 - Remotion 项目",
  "scripts": {
    "start": "remotion studio",
    "build": "remotion render src/index.ts TextRain out/video.mp4 --chromium-flags=\"--headless=new\"",
    "render": "remotion render src/index.ts TextRain out/video.mp4 --chromium-flags=\"--headless=new\"",
    "render-preview": "remotion render src/index.ts TextRain out/preview.mp4 --frames=0-90 --chromium-flags=\"--headless=new\"",
    "render-edge": "remotion render src/index.ts TextRain out/video.mp4 --chromium-flags=\"--headless\""
  },
  "dependencies": {
    "@remotion/cli": "^4.0.0",
    "@remotion/media": "^4.0.0",
    "@remotion/zod-types": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
